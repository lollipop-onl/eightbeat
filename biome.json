{
	"$schema": "https://biomejs.dev/schemas/1.7.1/schema.json",
	"files": {
		"ignore": ["*.gen.ts", "dist"]
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"nursery": {
				"useSortedClasses": "error"
			}
		}
	},
	"formatter": {
		"enabled": true
	}
}
